<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <FrameLayout
        android:id="@+id/InstructionMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/InstructionContentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/left"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="135"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="105"
                    android:background="@color/instructionFrame"
                    />

                <TextView
                    android:id="@+id/InstructionText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1435"
                    android:padding="@dimen/instruction_card_padding"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/instruction"
                    android:textStyle="bold"
                    android:textColor="#1f1f1f"
                    android:background="@drawable/InstructionPattern"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="105"
                    android:background="@color/instructionFrame"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="220"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/right"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/InstructionAnimationLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/InstructionAnimationMarginLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/instructionBackground"
                android:orientation="horizontal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@color/instructionBackground"
                android:src="@drawable/left"
                />

            <LinearLayout
                android:id="@+id/InstructionAnimationCenter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@color/instructionBackground"
                android:src="@drawable/right"
                />

            <LinearLayout
                android:id="@+id/InstructionAnimationMarginRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/instructionBackground"
                android:orientation="horizontal"
                />

        </LinearLayout>
    </FrameLayout>
</merge>
